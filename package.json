{
  "name": "am-coffee-time",
  "version": "1.0.1",
  "description": "",
  "main": "lib/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "run-s lint clean build:riot dist:*",
    "clean": "rimraf dist",
    "dist:main": "microbundle --entry src/main.js -o lib/main.js -f cjs --compress false",
    "dist:mock": "microbundle --entry src/mock.js -o lib/mock.js -f cjs --compress false",
    "lint": "standard src --verbose | snazzy && standard src/app/**/*.tag.html --verbose | snazzy",
    "prestart": "run-s build:riot",
    "start": "run-p watch:**",
    "build:riot": "riot src/app --ext tag.html",
    "gh-pages": "git checkout gh-pages && git merge master && rimraf docs && am-coffee-time build -d docs --public-url https://ampcpmgp.github.io/am-coffee-time/docs && git add . && git commit -m \"update gh-pages\" && git push origin && git checkout master",
    "watch:mock": "am-coffee-time watch",
    "watch:riot": "chokidar src/app/**/*.tag.html -c \"riot {path} --ext tag.html\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "am-coffee-time": "1.0.1",
    "babel-polyfill": "^6.26.0",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.1.3",
    "dob": "^2.5.8",
    "eslint-plugin-riot": "^0.1.7",
    "keyboardjs": "^2.4.1",
    "less": "^3.0.1",
    "microbundle": "^0.4.4",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.6.2",
    "query-string": "^5.1.0",
    "rimraf": "^2.6.2",
    "riot": "^3.9.0",
    "riot-route": "^3.1.3",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "history",
      "location",
      "opts"
    ],
    "plugins": [
      "riot"
    ]
  },
  "bin": {
    "am-coffee-time": "bin/index.js"
  },
  "dependencies": {
    "chokidar": "^2.0.2",
    "fs-extra": "^5.0.0",
    "get-port": "^3.2.0",
    "ip": "^1.1.5",
    "normalize-path": "^2.1.1",
    "yargs": "^11.0.0"
  },
  "peerDependencies": {
    "parcel-bundler": ">=1.6.2 <2"
  }
}
