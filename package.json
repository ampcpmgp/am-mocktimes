    "cross-env": "^5.1.3",
    "dob": "^2.5.8",
    "eslint-plugin-riot": "^0.1.7",
    "less": "^3.0.1",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.3.1",
    "query-string": "^5.1.0",
    "rimraf": "^2.6.2",
    "riot": "^3.7.4",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "opts"
    ],
