  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "TODO: dist": "uglify js",
    "dist": "run-s dist:*",
    "dist:clean": "rimraf dist",
    "dist:build": "parcel build src/main.js",
    "lint": "standard --verbose | snazzy src && standard src/app/**/*.tag.html --verbose | snazzy",
    "prestart": "run-s build:riot",
    "start": "run-p watch:**",
    "build:riot": "riot src/app --ext tag.html",
