{
  "name": "am-coffee-time",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "TODO: dist": "uglify js",
    "dist": "cross-env NODE_ENV=production parcel build src/index.html",
    "lint": "standard --verbose | snazzy src && standard src/app/**/*.tag.html --verbose | snazzy",
    "prestart": "run-s build:riot",
    "start": "run-p watch:**",
    "build:riot": "riot src/app --ext tag.html",
    "watch:riot": "chokidar src/app/**/*.tag.html -c \"riot {path} --ext tag.html\"",
    "watch:parcel:pattern": "parcel --open -p 9999 -d .dev mock/__pattern__.html",
    "watch:parcel": "parcel -p 9998 -d .dev mock/__index__.html"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "am-coffee-time": "^0.9.16",
    "babel-polyfill": "^6.26.0",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.1.3",
    "dob": "^2.5.8",
    "eslint-plugin-riot": "^0.1.7",
    "less": "^3.0.1",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.3.1",
    "riot": "^3.7.4",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "wavy": "^1.0.4"
  },
  "standard": {
    "plugins": [
      "riot"
    ]
  }
}
